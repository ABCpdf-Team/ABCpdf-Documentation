{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build WSGHelpUtils",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/WSGHelpUtils.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Convert HTML to Markdown",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/WSGHelpUtils.csproj",
                "--",
                "convert-md",
                "${input:sourcePath}",
                "${input:outputPath}"
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Convert HTML to Markdown (Test Files)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/WSGHelpUtils.csproj",
                "--",
                "convert-md",
                "${workspaceFolder}/TestHtmlFiles",
                "${workspaceFolder}/TestMarkdownOutput"
            ],
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Convert Manual HTML to Markdown",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/WSGHelpUtils.csproj",
                "--",
                "convert-md",
                "C:/WSG/hg/documentation/Manual",
                "${input:manualOutputPath}"
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Clean HTML (Test Files)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/WSGHelpUtils.csproj",
                "--",
                "clean-html",
                "${workspaceFolder}/TestHtmlFiles",
                "${workspaceFolder}/CleanedHtmlOutput",
                "--artifacts",
                "${workspaceFolder}/CleanerArtifacts"
            ],
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Clean HTML",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/WSGHelpUtils.csproj",
                "--",
                "clean-html",
                "${input:cleanSourcePath}",
                "${input:cleanOutputPath}",
                "--artifacts",
                "${input:cleanArtifactsPath}"
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ],
    "inputs": [
        {
            "id": "sourcePath",
            "type": "promptString",
            "description": "Source path (HTML file or folder)",
            "default": "${workspaceFolder}/TestHtmlFiles"
        },
        {
            "id": "outputPath",
            "type": "promptString",
            "description": "Output folder for Markdown files",
            "default": "${workspaceFolder}/TestMarkdownOutput"
        },
        {
            "id": "manualOutputPath",
            "type": "promptString",
            "description": "Output folder for Manual Markdown files",
            "default": "C:/WSG/hg/documentation/ManualMD"
        },
        {
            "id": "cleanSourcePath",
            "type": "promptString",
            "description": "Source path for HTML cleaning (file or folder)",
            "default": "${workspaceFolder}/TestHtmlFiles"
        },
        {
            "id": "cleanOutputPath",
            "type": "promptString",
            "description": "Output folder for cleaned HTML files",
            "default": "${workspaceFolder}/CleanedHtmlOutput"
        },
        {
            "id": "cleanArtifactsPath",
            "type": "promptString",
            "description": "Folder for comparison artifacts (screenshots, diffs)",
            "default": "${workspaceFolder}/CleanerArtifacts"
        }
    ]
}